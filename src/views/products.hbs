<link rel="stylesheet" href="/css/home.css" />
<h1>TODOS LOS PRODUCTOS</h1>
<div class="filterBox">
  <div class="filterTitle">
    <span><a href="/products/">Todos los productos con Paginate</a></span>
  </div>
  <br />
  <div class="filterForm">

    <div class="item">

      <p></p>

    </div>

  </div>

  <hr />
</div>

<div id="boxPagesTop" class="boxPages">
  <div><a href="/products/{{dataProducts.prevPage}}">Atras</a></div>
  <div>Pagina {{dataProducts.page}}</div>
  <div><a href="/products/{{dataProducts.nextPage}}">Siguiente</a></div>
  <div>Paginas {{dataProducts.totalPages}}</div><div>Total de productos
    {{dataProducts.totalDocs}}</div>
</div>
<br />

<div class="listadoProductos" id="listadoProductos">

  <pre>{{dataProducts.docs}}</pre>
  {{#each dataProducts.docs}}
    <div class="items">
      <div id="title">{{title}}</div>
      <div class="imgThumb"><img src="{{thumbnails}}" /></div>
      <div class="line1">{{description}}</div>
      <div class="line2">$ {{price}}</div>
      <div class="line1">Categoria: {{category}}</div>
      <div class="line2">Stock: {{stock}}</div>
      <div class="line1">Codigo: {{code}}</div>
      <div class="line2">ID: {{_id}}</div>
      <button class="btnAddCart" value="{{_id}}">Agregar al carro</button>
    </div>
  {{/each}}
</div>
<div id="boxPagesBot" class="boxPages">
  <div><a href="/products/{{dataProducts.prevPage}}">Atras</a></div>
  <div>Pagina {{dataProducts.page}}</div>
  <div><a href="/products/{{dataProducts.nextPage}}">Siguiente</a></div>
  <div>Paginas {{dataProducts.totalPages}}</div><div>Total de productos
    {{dataProducts.totalDocs}}</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
{{! <script src="/socket.io/socket.io.js"></script> }}
<script src="/js/products.js"></script>